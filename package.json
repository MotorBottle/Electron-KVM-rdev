{
  "name": "electron-kvm-client",
  "version": "0.3.0",
  "description": "Electron KVM Client for macOS",
  "main": "src/main.js",
  "author": {
    "name": "MotorBottle",
    "email": "motorbottt@gmail.com"
  },
  "license": "MIT",
  "homepage": "https://github.com/MotorBottle/USB-KVM-Electron",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "prebuild": "npm run build:native",
    "build": "electron-builder",
    "prebuild:rebuild": "npm run build:native",
    "build:rebuild": "electron-builder --config.buildDependenciesFromSource=true",
    "predist": "npm run build:native",
    "dist": "electron-builder --publish=never",
    "predist:rebuild": "npm run build:native",
    "dist:rebuild": "electron-builder --publish=never --config.buildDependenciesFromSource=true",
    "build:native": "cd native/rdev-grabber && npm install && npm run build"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "node-hid": "^3.0.0",
    "express": "^4.18.2",
    "socket.io": "^4.7.4",
    "ws": "^8.16.0"
  },
  "build": {
    "appId": "com.motorbottle.kvm-client",
    "productName": "KVM Client",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "node_modules/**/*",
      "native/rdev-grabber/index.js",
      "native/rdev-grabber/index.d.ts",
      "native/rdev-grabber/package.json",
      "native/rdev-grabber/*.node",
      "!node_modules/.cache/**/*",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}"
    ],
    "asarUnpack": [
      "native/rdev-grabber/*.node"
    ],
    "extraResources": [
      {
        "from": "README.md",
        "to": "README.md"
      },
      {
        "from": "assets/99-hidraw-permissions.rules",
        "to": "99-hidraw-permissions.rules"
      },
      {
        "from": "assets/post-install.sh",
        "to": "post-install.sh"
      }
    ],
    "mac": {
      "icon": "icon.icns",
      "category": "public.app-category.utilities",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "entitlements": "assets/entitlements.mac.plist",
      "entitlementsInherit": "assets/entitlements.mac.plist",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "darkModeSupport": true,
      "extendInfo": "assets/Info.plist"
    },
    "dmg": {
      "title": "KVM Client",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "icon": "icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable.${ext}"
    },
    "linux": {
      "icon": "build/icons",
      "category": "Utility",
      "desktop": {
        "Name": "KVM Client",
        "Comment": "USB KVM Control Software",
        "Type": "Application",
        "Categories": "Utility;System;",
        "StartupNotify": "true"
      },
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "deb": {
      "depends": [
        "libusb-1.0-0",
        "libudev1",
        "libc6"
      ],
      "afterInstall": "assets/post-install.sh",
      "maintainer": "MotorBottle <motorbottt@gmail.com>",
      "synopsis": "KVM Client for USB HID devices"
    }
  }
}
