{
  "name": "electron-kvm-client",
  "version": "1.0.0",
  "description": "Electron KVM Client for macOS",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "node-hid": "^3.0.0",
    "express": "^4.18.2",
    "socket.io": "^4.7.4",
    "ws": "^8.16.0"
  },
  "build": {
    "appId": "com.osrbot.kvm-client",
    "productName": "KVM Client",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "target": "dmg"
    }
  }
}